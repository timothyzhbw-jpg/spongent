# --- 2. Your "Search Logic" (FUNCTION) ---
def find_acg(search_keyword):
    """
    This is a simple search function.
    It loops through the database and checks if the keyword is in the 'plot' or 'title'.
    """
    
    print(f"\n--- Searching for keyword: '{search_keyword}' ---")
    
    found_results = [] # Create an empty list to store the results

    # Loop through your database using a 'for' loop
    for entry in DATABASE:
        title = entry["title"]
        plot = entry["plot"]
        
        # Check if the keyword is in the plot or title using 'if'
        # We use .lower() to make the search case-insensitive
        if search_keyword.lower() in plot.lower() or \
           search_keyword.lower() in title.lower():
            
            found_results.append(title) # If found, add it to the results list

    # Return the results
    return found_results

